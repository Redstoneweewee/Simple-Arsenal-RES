{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "yes:javelin_missile",
      "materials": {
        "default": "arrow"
      },
      "textures": {
        "default": "textures/entity/javelin_missile_texture"
      },
      "geometry": {
        "default": "geometry.javelin_missile"
      },
      "animations": {
        "look_at_target": "animation.javelin_missile_look",
        "open": "animation.javelin_missile.open"//,
        //"trail": "animation.javelin_missile.trail"
      },
      "scripts": {
        "should_update_bones_and_effects_offscreen": true,
        "pre_animation": [
          "variable.shake = query.shake_time - query.frame_alpha;",
          "variable.shake_power = variable.shake > 0.0 ? -Math.sin(variable.shake * 200.0) * variable.shake : 0.0;"
        ],
        "animate": [
          "look_at_target",
          "open",
          "trail"
        ]
      },
      "particle_effects": {
          "javelin_blast": "yes:javelin_blast"//,
          //"javelin_trail": "yes:javelin_smoke_trail"
      },
      "render_controllers": [ "controller.render.arrow" ]
    }
  }
} 